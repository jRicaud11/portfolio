---
import Github from "./svg/Github.astro";
import Deploy from "./svg/Deploy.astro";
import Cross from "./svg/Cross.astro";
import Info from "./svg/Info.astro";

export interface Props {
  image: string;
  title: string;
  description: string;
  techs: Array<string>;
  deploy: string;
  github: string;
  gallery: Array<string>;
  path: string;
}

const { image, title, description, techs, github, deploy, gallery, path } =
  Astro.props as Props;
---

<astro-projects data-id={title}>
  <div class="div--project__container">
    <div class="img--container">
      <img src={image} alt="" class="project--img" />
    </div>
    <div class="btn--container">
      <a class="link" href={github} target="_blank">
        <Github />
      </a>
      <a class="link" href={deploy} target="_blank">
        <Deploy />
      </a>
      <div class="gallery">
        <a href={`/projects/${path}`} target="_blank">
          <Info />
        </a>
      </div>
    </div>
  </div>
