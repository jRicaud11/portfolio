<style>
  /* MAIN CARD */
  .div--project__container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 300px;
    min-width: 300px;
    height: 40vh;
    overflow: hidden;
    border-radius: 10px;
  }

  .img--container {
    height: 90%;
  }

  .project--img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .btn--container {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    width: 100%;
    background-color: var(--main-color);
    padding-top: 10px;
  }

  /* --- */

  /* GALLERY */
  .project--gallery {
    position: fixed;
    display: flex;
    justify-content: center;
    align-items: center;
    backdrop-filter: blur(8px);
    height: 100vh;
    width: 100vw;
    top: 0;
    left: 0;
  }

  .gallery--container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 60vw;
    height: 85vh;
    background-color: var(--main-color);
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 10px 10px 20px black;
  }

  .closing--gallery {
    position: absolute;
    right: 0;
    top: 10px;
    cursor: pointer;
  }
  .project--information {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .techs--container {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    flex-wrap: wrap;
  }

  .span--techs {
    background-color: var(--secondary-color);
    padding: 10px;
    margin: 5px;
    border-radius: 10px;
    color: black;
    cursor: default;
  }

  .project--title {
    text-align: center;
    font-size: 2.5rem;
    color: black;
    margin: 20px;
  }

  .project--information p {
    color: black;
    font-size: 1.2rem;
    margin: 5px;
    letter-spacing: 1px;
  }
  .gallery {
    cursor: pointer;
  }
  /* --- */

  /* SLIDER */
  .container--slider {
    overflow: hidden;
  }

  .inner--slider {
    display: flex;
    flex-wrap: nowrap;
    transition: 0.5s ease-in;
  }

  .img--slider {
    width: 100%;
    height: 100%;
  }

  /* --- */

  .hidden {
    display: none;
  }
</style>

