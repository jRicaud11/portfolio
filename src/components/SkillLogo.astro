---
export interface Props{
  logo: string,
  name: string
}

const {logo, name} = Astro.props as Props
---

<div class="container--logo">
  <img class="logo" src={logo} />
  <p class="name">{name}</p>
</div>

<style>
  .container--logo{
    display: flex;
    align-items: center;
    text-align: center;
    width: 20vw;
  }
  
  .name{
    padding: 10px;
    font-size: 20px;
    letter-spacing: 2px;
    color: var(--main-color);
  }

  .logo{
    background: transparent;
    height: 60px;
    width: 60px;
    filter: brightness(120%);
    margin: 20px 30px 20px 30px;
  }
</style>
